pipeline {
  agent {
    docker {
      image 'kelvinpradhan/maven-kelvin-docker-agent:v1'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
      reuseNode true
    }
  }

  options {
    timestamps()
  }

  environment {
    SONAR_URL = 'http://192.168.19.128:9000'
    APP_DIR   = 'java-maven-sonar-argocd-helm-k8s/spring-boot-app'
    IMAGE_REPO = 'kelvinpradhan/ultimate-cicd'
  }

  stages {

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build & Test') {
      steps {
        dir("${APP_DIR}") {
          sh 'mvn clean package'
        }
      }
    }

    stage('Static Code Analysis') {
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          dir("${APP_DIR}") {
            sh """
              mvn sonar:sonar \
                -Dsonar.login=${SONAR_AUTH_TOKEN} \
                -Dsonar.host.url=${SONAR_URL}
            """
          }
        }
      }
    }

    stage('Build & Push Docker Image') {
      environment {
        DOCKER_IMAGE = "${IMAGE_REPO}:${BUILD_NUMBER}"
      }
      steps {
        script {
          docker.withRegistry('https://index.docker.io/v1/', 'docker-cred') {
            dir("${APP_DIR}") {
              sh "docker build -t ${DOCKER_IMAGE} ."
            }
            docker.image("${DOCKER_IMAGE}").push()
          }
        }
      }
    }

    stage('Update Deployment File') {
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh """
            git config user.email 'kelvinpradhan18@gmail.com'
            git config user.name 'Kelvin Pradhan'

            sed -i 's/replaceImageTag/${BUILD_NUMBER}/g' \
              java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml

            git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
            git commit -m 'Update deployment image to ${BUILD_NUMBER}' || echo 'No changes to commit'
            git push https://${GITHUB_TOKEN}@github.com/kelvinext/Jenkins-Zero-To-Hero.git HEAD:main
          """
        }
      }
    }
  }
}
